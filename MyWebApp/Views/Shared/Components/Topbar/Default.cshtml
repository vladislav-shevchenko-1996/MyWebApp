@using MyWebApp.Views.Shared.Components.Topbar;
@using Microsoft.AspNetCore.Mvc.Localization
@model TopbarViewModel
@inject IHtmlLocalizer<SharedResource> Localizer
<nav class="navbar navbar-expand-lg  py-4" id="navbar">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            Mega<span>kit.</span>
        </a>

        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
            <span class="fa fa-bars"></span>
        </button>

        <div class="collapse navbar-collapse text-center" id="navbarsExample09">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"] <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Localizer["About"]</a>
                    <ul class="dropdown-menu" aria-labelledby="dropdown03">
                        <li><a asp-area="" asp-controller="Home" asp-action="AboutCompany" class="dropdown-item">Our company</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Pricing">Pricing</a></li>
                    </ul>
                </li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Service">@Localizer["Services"] </a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Portfolio">@Localizer["Portfolio"]</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown05" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Localizer["Blog"] </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdown05">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="BlogGrid">Blog Grid</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="BlogSidebar">Blog with Sidebar</a></li>

                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="BlogSingle">Blog Single</a></li>
                    </ul>
                </li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">@Localizer["Contact"]</a></li>
            </ul>
            @if(Model.IsAdminUser)
            { 
            <form class="form-lg-inline my-2 my-md-0 ml-lg-4 text-center">
                <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-solid-border btn-round-full">@Localizer["Get a Quote"]</a>
            </form>
            }
            
            <partial name="_SelectLanguage" />
        </div>
    </div>
</nav>